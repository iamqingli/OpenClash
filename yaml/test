# ========================
# DNS 设置
# ========================
dns:
  enable: true
  listen: 0.0.0.0:7874
  ipv6: true
  enhanced-mode: fake-ip
  fake-ip-range: 198.20.0.1/16
  nameserver:
    - 180.184.1.1
    - 119.29.29.29
    - 114.114.114.114
  fallback:
    - tls://8.8.8.8:853
    - tls://1.1.1.1:853
  cache: true
  cache-size: 8000
  fallback-filter:
    geoip: true
    geoip-code: CN
    ipcidr:
      - 240.0.0.0/4
  fake-ip-filter:
    - +.lan
    - +.local
    - geosite:cn
    - +.api.aial.pw
    - +.sub.aial.pw
    - +.subweb.aial.pw

# ========================
# TUN 模块
# ========================
tun:
  enable: true
  stack: gvisor
  device: utun
  mtu: 9000
  endpoint-independent-nat: true
  auto-route: true
  auto-detect-interface: true
  auto-redirect: true
  strict-route: false
  dns-hijack:
    - any:53
    - tcp://any:53

# ========================
# sniffer 模块
# ========================
sniffer:
  enable: true
  sniff:
    HTTP:
      ports: [80, 8080-8880]
      override-destination: true
    TLS:
      ports: [443, 8443]
    QUIC:
      ports: [443, 8443]
  force-domain:
    - "*.v2ex.com"
  skip-domain:
    - "*.push.apple.com"
    - "*.wechat.com"
    - "*.qq.com"
    - "*.mi.com"

# ========================
# profile 存储设置
# ========================
profile:
  store-selected: true
  store-fake-ip: true
  store-path: ./storage
