# ========================
# Clash-Mini 性能优化配置（含锚点与icon）
# ========================

# ========================
# 锚点定义
# ========================
Proxy_first: &Proxy_first
  type: select
  proxies:
    - 所有-自动
    - 所有-手动
    - 香港-故转
    - 日本-故转
    - 美国-故转
    - 台湾-故转
    - 新加坡-故转
    - 其他-故转
    - 直连

Direct_first: &Direct_first
  type: select
  proxies:
    - 直连
    - 所有-自动
    - 所有-手动
    - 香港-故转
    - 日本-故转
    - 美国-故转
    - 台湾-故转
    - 新加坡-故转
    - 其他-故转

Include_all: &Include_all
  type: select
  include-all: true
  filter: "^((?!(直连)).)*$"

PProviders: &PProviders
  type: http
  interval: 21600
  health-check:
    enable: true
    url: https://cp.cloudflare.com/generate_204
    interval: 1800
  proxy: 直连

# ========================
# 节点订阅链接
# ========================
proxy-providers:
  订阅地址1:
    <<: *PProviders
    url: "https://sub.aial.pw/CKg2abstVnOeRpm1aB4G/download/collection/科学上网"
    udp: true
  订阅地址2:
    <<: *PProviders
    url: "订阅地址"
    udp: true

# 基础代理
proxies:
  - {name: 直连, type: direct}

# ========================
# 端口与控制面板
# ========================
port: 7890
