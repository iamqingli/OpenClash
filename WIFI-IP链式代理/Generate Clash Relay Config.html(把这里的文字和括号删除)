    <div id="nodes">
        <div class="node">
            <h2>Node 1</h2>
            <div>
                <label for="name1">Name:</label>
                <input type="text" class="name" id="name1" placeholder="Enter name">
                <label for="server1">Server:</label>
                <input type="text" class="server" id="server1" placeholder="Enter server address">
